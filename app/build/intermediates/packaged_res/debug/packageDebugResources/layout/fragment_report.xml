<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportFragment">

    <!-- DatePicker centered horizontally at the top -->
    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="405dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:calendarTextColor="@android:color/background_light"
        />

    <!-- TextView for exercise -->
    <TextView
        android:id="@+id/exercise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="운동 종목"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/date_picker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/first"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"/>

    <!-- Placeholder view for spacing -->
    <View
        android:id="@+id/first"
        android:layout_width="3dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/date_picker"
        app:layout_constraintLeft_toRightOf="@id/exercise"
        app:layout_constraintRight_toLeftOf="@id/time"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        />

    <!-- TextView for time -->
    <TextView
        android:id="@+id/time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/date_picker"
        app:layout_constraintLeft_toRightOf="@id/first"
        app:layout_constraintRight_toLeftOf="@id/second"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"/>

    <!-- Placeholder view for spacing -->
    <View
        android:id="@+id/second"
        android:layout_width="3dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/date_picker"
        app:layout_constraintLeft_toRightOf="@+id/time"
        app:layout_constraintRight_toLeftOf="@id/kcal"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="16dp"
        />

    <!-- TextView for kcal -->
    <TextView
        android:id="@+id/kcal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="소모 칼로리"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/date_picker"
        app:layout_constraintLeft_toRightOf="@id/second"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
