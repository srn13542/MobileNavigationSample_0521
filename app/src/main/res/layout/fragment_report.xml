<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context="mobilenavigationsample.example.mobilenavigationsample.ReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

        <!-- DatePicker centered horizontally at the top -->
        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="true"
            android:datePickerMode="calendar"
            android:theme="@style/MyDatePickerStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/TextViewGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/date_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/TextViewExercise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:text="운동 종류"
                android:textSize="18dp" />

            <!-- TextView for exercise times -->
            <TextView
                android:id="@+id/time_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:text="시간"
                android:textSize="18dp" />

            <!-- TextView for exercise calories -->
            <TextView
                android:id="@+id/TextViewCalories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:text="소모 칼로리"
                android:textSize="18dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Layout_Exercise1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/TextViewGroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/Exercise1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- TextView for exercise times -->
            <TextView
                android:id="@+id/Exercise1_Time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- TextView for exercise calories -->
            <TextView
                android:id="@+id/Exercise1_Calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_Exercise2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Layout_Exercise1">

            <TextView
                android:id="@+id/Exercise2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- TextView for exercise times -->
            <TextView
                android:id="@+id/Exercise2_Time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- TextView for exercise calories -->
            <TextView
                android:id="@+id/Exercise2_Calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_Exercise3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/Layout_Exercise2"
            app:layout_constraintBottom_toTopOf="@id/navigationView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/Exercise3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- TextView for exercise times -->
            <TextView
                android:id="@+id/Exercise3_Time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />

            <!-- TextView for exercise calories -->
            <TextView
                android:id="@+id/Exercise3_Calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/freesentation_6_semibold"
                android:gravity="center"
                android:textSize="16dp" />
        </LinearLayout>

        <!-- Exercise2_Layout, Exercise3_Layout 등 추가 -->

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:itemBackground="@color/white"
            app:itemIconTint="@drawable/menu_click_color"
            app:itemTextColor="@drawable/menu_click_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/navi_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
